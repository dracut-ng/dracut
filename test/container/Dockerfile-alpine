FROM docker.io/alpine:latest

# prefer running tests with clang
ENV CC=clang

# ovmf is not installed as systemd-boot-efistub is not available
# see https://gitlab.alpinelinux.org/alpine/aports/-/merge_requests/61369
RUN apk add --no-cache \
    asciidoc \
    bash \
    binutils \
    blkid \
    bluez \
    btrfs-progs \
    busybox \
    bzip2 \
    cargo \
    clang \
    coreutils \
    cpio \
    cryptsetup \
    curl \
    dash \
    device-mapper \
    dhclient \
    dmraid \
    dosfstools \
    dracut \
    e2fsprogs \
    elogind \
    erofs-utils \
    eudev \
    file \
    findmnt \
    f2fs-tools \
    git \
    gpg \
    grep \
    iputils \
    jfsutils \
    jq \
    kbd \
    keyutils \
    kmod \
    kmod-dev \
    libcap-utils \
    linux-virt \
    losetup \
    lvm2 \
    make \
    mdadm \
    mtools \
    multipath-tools \
    musl-fts-dev \
    nbd \
    ntfs-3g \
    ntfs-3g-progs \
    nvme-cli \
    open-iscsi \
    openssh \
    parted \
    partx \
    pigz \
    plymouth-themes \
    procps \
    qemu-img \
    qemu-system-x86_64 \
    rng-tools \
    sed \
    sfdisk \
    squashfs-tools \
    swtpm \
    util-linux-misc \
    xfsprogs \
    xz

# workaround for --enable-split-usr
# see https://github.com/eudev-project/eudev/pull/246
# needed to run RAID tests
RUN \
  cp /usr/lib/udev/rules.d/* /lib/udev/rules.d/
